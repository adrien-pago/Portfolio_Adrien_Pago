<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Portfolio{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚕️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="wrapper">
            <!-- Header Mobile -->
            <header class="mobile-header">
                <h1 class="mobile-title">Portfolio - Adrien Pago</h1>
                <button class="menu-toggle">
                    <i class="fas fa-bars"></i>
                </button>
            </header>

            <!-- Sidebar -->
            <div class="mobile-overlay"></div>
            <aside class="sidebar">
                <div class="profile-section">
                    <div class="profile-image">
                        <img src="{{ asset('build/images/portrait.jpg') }}" alt="Adrien Pago">
                    </div>
                    <div class="profile-name">Adrien Pago</div>
                    <div class="profile-title">Développeur Full Stack</div>
                </div>
                <nav>
                    <ul>
                        <li>
                            <a href="{{ path('app_home') }}" class="{{ app.request.get('_route') == 'app_home' ? 'active' : '' }}">
                                <i class="fas fa-home"></i>
                                Accueil
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('app_profile') }}" class="{{ app.request.get('_route') == 'app_profile' ? 'active' : '' }}">
                                <i class="fas fa-user"></i>
                                Profil
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('app_projects') }}" class="{{ app.request.get('_route') == 'app_projects' ? 'active' : '' }}">
                                <i class="fas fa-project-diagram"></i>
                                Projets
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('app_veille') }}" class="{{ app.request.get('_route') == 'app_veille' ? 'active' : '' }}">
                                <i class="fas fa-newspaper"></i>
                                Veille
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('app_contact') }}" class="{{ app.request.get('_route') == 'app_contact' ? 'active' : '' }}">
                                <i class="fas fa-envelope"></i>
                                Contact
                            </a>
                        </li>
                    </ul>
                </nav>
                {% include '_partials/social_links.html.twig' %}
            </aside>

            <!-- Main Content -->
            <main class="main-content">
                {% block body %}{% endblock %}
            </main>
        </div>
    </body>
</html>
