{% extends 'base.html.twig' %}

{% block title %}{{ platform_name }} - Non disponible{% endblock %}

{% block body %}
    <div class="social-unavailable-page">
        <div class="container">
            <div class="unavailable-content glass animate-fade-in-up">
                <div class="icon-container animate-bounce">
                    {% if platform == 'instagram' %}
                        <i class="fab fa-instagram"></i>
                    {% elseif platform == 'twitter' %}
                        <i class="fab fa-twitter"></i>
                    {% else %}
                        <i class="fas fa-link"></i>
                    {% endif %}
                </div>
                
                <h1 class="animate-fade-in-down">{{ platform_name }}</h1>
                
                <div class="message animate-fade-in-up">
                    <p class="lead">
                        Je n'ai pas encore de compte <strong>{{ platform_name }}</strong> pour le moment.
                    </p>
                    
                    <p>
                        En attendant, vous pouvez me retrouver sur mes autres réseaux sociaux 
                        ou me contacter directement !
                    </p>
                </div>

                <div class="available-links animate-stagger">
                    <h3>Retrouvez-moi sur :</h3>
                    {% include '_partials/social_links.html.twig' with {
                        'show_text': true,
                        'class': 'available-social-links'
                    } %}
                </div>

                <div class="action-buttons animate-scale-in">
                    <a href="{{ path('app_home') }}" class="btn btn-primary interactive">
                        <i class="fas fa-home"></i>
                        Retour à l'accueil
                    </a>
                    
                    <a href="{{ path('app_contact') }}" class="btn btn-outline-primary interactive">
                        <i class="fas fa-envelope"></i>
                        Me contacter
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .social-unavailable-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            padding: 2rem 0;
        }

        .unavailable-content {
            text-align: center;
            max-width: 600px;
            padding: 3rem;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

        .icon-container {
            font-size: 4rem;
            color: #6c757d;
            margin-bottom: 1.5rem;
        }

        .icon-container i {
            opacity: 0.7;
        }

        .unavailable-content h1 {
            font-size: 2.5rem;
            color: #2c3e50;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

        .message {
            margin-bottom: 2rem;
        }

        .message .lead {
            font-size: 1.3rem;
            color: #495057;
            margin-bottom: 1rem;
        }

        .message p {
            color: #6c757d;
            line-height: 1.6;
        }

        .available-links {
            margin: 2.5rem 0;
            padding: 2rem;
            background: rgba(33, 147, 176, 0.1);
            border-radius: 15px;
        }

        .available-links h3 {
            color: #2193b0;
            margin-bottom: 1.5rem;
            font-size: 1.2rem;
        }

        .available-social-links {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            flex-wrap: wrap;
        }

        .available-social-links .social-link {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            background: white;
            border-radius: 25px;
            text-decoration: none;
            color: #2c3e50;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .available-social-links .social-link:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            text-decoration: none;
        }

        .available-social-links .social-link.github {
            background: linear-gradient(135deg, #333 0%, #24292e 100%);
            color: white;
        }

        .available-social-links .social-link.linkedin {
            background: linear-gradient(135deg, #0077b5 0%, #005582 100%);
            color: white;
        }

        .available-social-links .social-link.email {
            background: linear-gradient(135deg, #ea4335 0%, #c5221f 100%);
            color: white;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 2rem;
        }

        .btn {
            padding: 0.8rem 2rem;
            border-radius: 25px;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
        }

        @media (max-width: 768px) {
            .social-unavailable-page {
                padding: 1rem 0;
            }

            .unavailable-content {
                margin: 0 0.25rem;
                padding: 1.5rem 1rem;
                border-radius: 12px;
                max-width: 100%;
            }

            .unavailable-content h1 {
                font-size: 2rem;
            }

            .available-links {
                margin: 2rem 0;
                padding: 1.5rem 1rem;
                border-radius: 10px;
            }

            .available-social-links {
                flex-direction: column;
                align-items: center;
                gap: 1rem;
            }

            .available-social-links .social-link {
                width: 100%;
                justify-content: center;
                padding: 0.8rem 1rem;
            }

            .action-buttons {
                flex-direction: column;
                align-items: center;
                gap: 0.75rem;
            }

            .btn {
                width: 100%;
                justify-content: center;
                padding: 0.8rem 1.5rem;
            }
        }
    </style>
{% endblock %} 