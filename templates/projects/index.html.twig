{% extends 'base.html.twig' %}

{% block title %}Projets - Portfolio{% endblock %}

{% block body %}
    <div class="projects-header">
        <h1 class="section-title">Mes Projets</h1>
        <p class="lead">Découvrez mes différents projets web, mobile et desktop.</p>
    </div>

    <div class="filters mb-4">
        <button class="btn btn-outline-primary filter-btn active" data-category="all">Tous</button>
        <button class="btn btn-outline-primary filter-btn" data-category="web">Web</button>
        <button class="btn btn-outline-primary filter-btn" data-category="mobile">Mobile</button>
        <button class="btn btn-outline-primary filter-btn" data-category="desktop">Desktop</button>
    </div>

    <div class="projects-grid">
        <div class="project-item" data-category="web">
            <div class="card">
                <img src="{{ asset('build/images/logo-projet.jpg') }}" alt="Projet 1">
                <div class="card-body">
                    <h5 class="card-title">Projet Web 1</h5>
                    <p class="card-text">Description détaillée du projet web 1.</p>
                    <div class="tech-stack">
                        <span class="badge">Symfony</span>
                        <span class="badge">React</span>
                        <span class="badge">MySQL</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="#" class="btn btn-primary">Voir le projet</a>
                        <small class="text-muted">2023</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="project-item" data-category="mobile">
            <div class="card">
                <img src="{{ asset('build/images/logo-projet.jpg') }}" alt="Projet 2">
                <div class="card-body">
                    <h5 class="card-title">Projet Mobile 1</h5>
                    <p class="card-text">Description détaillée du projet mobile 1.</p>
                    <div class="tech-stack">
                        <span class="badge">React Native</span>
                        <span class="badge">Firebase</span>
                        <span class="badge">Redux</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="#" class="btn btn-primary">Voir le projet</a>
                        <small class="text-muted">2023</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="project-item" data-category="desktop">
            <div class="card">
                <img src="{{ asset('build/images/logo-projet.jpg') }}" alt="Projet 3">
                <div class="card-body">
                    <h5 class="card-title">Projet Desktop 1</h5>
                    <p class="card-text">Description détaillée du projet desktop 1.</p>
                    <div class="tech-stack">
                        <span class="badge">Electron</span>
                        <span class="badge">Vue.js</span>
                        <span class="badge">SQLite</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="#" class="btn btn-primary">Voir le projet</a>
                        <small class="text-muted">2023</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 