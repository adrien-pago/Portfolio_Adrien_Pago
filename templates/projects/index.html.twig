{% extends 'base.html.twig' %}

{% block title %}Projets - Portfolio{% endblock %}

{% block body %}
    <div class="projects-header">
        <h1 class="section-title">Mes Projets</h1>
        <p class="lead">Découvrez mes différents projets web, mobile et desktop.</p>
    </div>

    <div class="filters mb-4">
        <button class="btn btn-outline-primary filter-btn active" data-category="all">Tous</button>
        <button class="btn btn-outline-primary filter-btn" data-category="web">Web</button>
        <button class="btn btn-outline-primary filter-btn" data-category="mobile">Mobile</button>
        <button class="btn btn-outline-primary filter-btn" data-category="autre">Autre</button>
    </div>

    <div class="projects-grid">
        {% for project in projects %}
            <div class="project-item" data-category="{{ project.category }}">
                <div class="card">
                    <img src="{{ asset('uploads/projects/' ~ project.id ~ '-' ~ project.slug ~ '/' ~ project.cover_image) }}" 
                         alt="{{ project.title }}" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{ project.title }}</h5>
                        <p class="card-text">{{ project.description|slice(0, 100) }}{% if project.description|length > 100 %}...{% endif %}</p>
                        <div class="tech-stack">
                            {% for tag in project.tags %}
                                <span class="badge">{{ tag }}</span>
                            {% endfor %}
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-primary">Voir le projet</a>
                            <small class="text-muted">{{ project.created_at|date('Y') }}</small>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <p class="text-muted">Aucun projet disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
{% endblock %} 