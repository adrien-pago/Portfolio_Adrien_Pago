{% extends 'base.html.twig' %}

{% block title %}{{ project.title }} - Portfolio{% endblock %}

{% block body %}
<div class="project-details">
    <div class="project-header">
        <h1>{{ project.title }}</h1>
        <div class="project-meta">
            <span class="date">
                <i class="far fa-calendar"></i>
                {{ project.created_at|date('d/m/Y') }}
            </span>
            <div class="project-tags">
                {% for tag in project.tags %}
                    <span class="tag">{{ tag }}</span>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="project-content">
        <div class="project-gallery">
            {% if project.gallery_images|length > 0 %}
                <div id="projectCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        {% for image in project.gallery_images %}
                            <button type="button" data-bs-target="#projectCarousel" data-bs-slide-to="{{ loop.index0 }}" 
                                    {% if loop.first %}class="active" aria-current="true"{% endif %} 
                                    aria-label="Image {{ loop.index }}"></button>
                        {% endfor %}
                    </div>
                    <div class="carousel-inner">
                        {% for image in project.gallery_images %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}">
                                <img src="{{ asset('uploads/projects/' ~ project.id ~ '-' ~ project.slug ~ '/gallery/' ~ image) }}" 
                                     class="d-block w-100" 
                                     alt="{{ project.title }} - Image {{ loop.index }}">
                            </div>
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#projectCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Précédent</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#projectCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Suivant</span>
                    </button>
                </div>
            {% else %}
                <div class="project-image-fallback">
                    <img src="{{ asset('uploads/projects/' ~ project.id ~ '-' ~ project.slug ~ '/' ~ project.cover_image) }}" 
                         alt="{{ project.title }}" class="img-fluid">
                </div>
            {% endif %}
        </div>

        <div class="project-description">
            <h2>Description du projet</h2>
            <p>{{ project.description }}</p>
        </div>

        <div class="project-links">
            {% if project.github_url %}
                <a href="{{ project.github_url }}" class="btn btn-github" target="_blank">
                    <i class="fab fa-github"></i>
                    Voir sur GitHub
                </a>
            {% endif %}

            {% if project.demo_url %}
                <a href="{{ project.demo_url }}" class="btn btn-demo" target="_blank">
                    <i class="fas fa-external-link-alt"></i>
                    Voir la démo
                </a>
            {% endif %}
        </div>
    </div>

    <div class="back-link">
        <a href="{{ path('app_projects') }}">
            <i class="fas fa-arrow-left"></i>
            Retour aux projets
        </a>
    </div>
</div>
{% endblock %} 