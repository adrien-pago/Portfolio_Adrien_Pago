{% extends 'base.html.twig' %}

{% block title %}{{ project.title }} - Portfolio{% endblock %}

{% block body %}
<div class="project-details">
    <div class="project-header">
        <h1>{{ project.title }}</h1>
        <div class="project-meta">
            <span class="date">
                <i class="far fa-calendar"></i>
                {{ project.created_at|date('d/m/Y') }}
            </span>
            <div class="project-tags">
                {% for tag in project.tags %}
                    <span class="tag">{{ tag }}</span>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="project-content">
        <div class="project-gallery">
            {% if project.gallery_images|length > 0 %}
                <div id="projectCarousel" class="carousel slide carousel-fade" 
                     data-bs-ride="carousel" 
                     data-bs-interval="4000" 
                     data-bs-pause="hover"
                     data-bs-touch="true">
                    <div class="carousel-indicators">
                        {% for image in project.gallery_images %}
                            <button type="button" data-bs-target="#projectCarousel" data-bs-slide-to="{{ loop.index0 }}" 
                                    {% if loop.first %}class="active" aria-current="true"{% endif %} 
                                    aria-label="Image {{ loop.index }}"></button>
                        {% endfor %}
                    </div>
                    <div class="carousel-inner">
                        {% for image in project.gallery_images %}
                            <div class="carousel-item {% if loop.first %}active{% endif %}" data-bs-interval="4000">
                                <img src="{{ asset('uploads/projects/' ~ project.id ~ '-' ~ project.slug ~ '/gallery/' ~ image) }}" 
                                     class="d-block w-100" 
                                     alt="{{ project.title }} - Image {{ loop.index }}"
                                     loading="lazy">
                            </div>
                        {% endfor %}
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#projectCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Précédent</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#projectCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Suivant</span>
                    </button>
                    
                    <!-- Contrôles personnalisés -->
                    <div class="carousel-controls-overlay">
                        <button class="carousel-play-pause" id="carouselPlayPause">
                            <i class="fas fa-pause"></i>
                        </button>
                    </div>
                </div>
            {% else %}
                <div class="project-image-fallback">
                    <img src="{{ asset('uploads/projects/' ~ project.id ~ '-' ~ project.slug ~ '/' ~ project.cover_image) }}" 
                         alt="{{ project.title }}" class="img-fluid">
                </div>
            {% endif %}
        </div>

        <div class="project-description">
            <h2>Description du projet</h2>
            <p>{{ project.description }}</p>
        </div>

        <div class="project-links">
            {% if project.github_url %}
                <a href="{{ project.github_url }}" class="btn btn-github" target="_blank">
                    <i class="fab fa-github"></i>
                    Voir sur GitHub
                </a>
            {% endif %}

            {% if project.demo_image %}
                <button type="button" class="btn btn-demo" data-bs-toggle="modal" data-bs-target="#demoModal">
                    <i class="fas fa-play-circle"></i>
                    Voir la démo
                </button>
            {% endif %}
        </div>
    </div>

    <div class="back-link">
        <a href="{{ path('app_projects') }}">
            <i class="fas fa-arrow-left"></i>
            Retour aux projets
        </a>
    </div>
</div>

<!-- Modal Démo -->
{% if project.demo_image %}
<div class="modal fade" id="demoModal" tabindex="-1" aria-labelledby="demoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="demoModalLabel">
                    <i class="fas fa-play-circle me-2"></i>
                    Démo - {{ project.title }}
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
            </div>
            <div class="modal-body text-center">
                <img src="{{ asset('uploads/projects/' ~ project.id ~ '-' ~ project.slug ~ '/' ~ project.demo_image) }}" 
                     alt="Démo {{ project.title }}" 
                     class="img-fluid rounded demo-image">
                <p class="mt-3 text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    vidéo en cours de réalisation, bientôt disponible
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>
                    Fermer
                </button>
                {% if project.github_url %}
                    <a href="{{ project.github_url }}" class="btn btn-primary" target="_blank">
                        <i class="fab fa-github me-1"></i>
                        Voir le code source
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %} 