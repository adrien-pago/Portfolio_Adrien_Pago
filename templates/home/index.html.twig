{% extends 'base.html.twig' %}

{% block title %}Portfolio - Adrien Pago{% endblock %}

{% block body %}
    <section class="hero-section">
        <div class="clouds">
            {% for i in 1..5 %}
                <div class="cloud"></div>
            {% endfor %}
        </div>
        <div class="particles">
            {% for i in 1..30 %}
                <div class="particle"></div>
            {% endfor %}
        </div>
        <div class="hero-content">
            <h1 class="main-title">Adrien Pago</h1>
            <div class="typing-container">
                <span id="typed-text"></span>
            </div>
            <a href="{{ asset('CV.pdf') }}" class="download-btn" download>
                <i class="fas fa-download"></i>
                Télécharger mon CV
            </a>
        </div>
    </section>

    <div class="latest-sections">
        <div class="section-container">
            <div class="section-header">
                <h2>Derniers Projets</h2>
                <a href="{{ path('app_projects') }}" class="view-all">Voir tout</a>
            </div>
            <div class="projects-grid">
                {% for project in latestProjects %}
                    {% include 'projects/_project_card.html.twig' with {'project': project} %}
                {% endfor %}
            </div>
        </div>

        <div class="section-container">
            <div class="section-header">
                <h2>Dernière Veille Technologique</h2>
                <a href="{{ path('app_veille') }}" class="view-all">Voir tout</a>
            </div>
            <div class="veille-grid">
                {% for article in latestArticles %}
                    {% include 'veille/_article_card.html.twig' with {'article': article} %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %} 