{% extends 'base.html.twig' %}

{% block title %}Accueil - Portfolio{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero-section text-center py-5">
        <div class="container">
            <h1 class="display-4 mb-4">Bienvenue sur mon Portfolio</h1>
            <p class="lead mb-4">Développeur Web Full Stack passionné par la création d'applications web modernes</p>
            <div class="hero-buttons">
                <a href="{{ path('app_profile') }}" class="btn btn-primary btn-lg me-3">En savoir plus</a>
                <a href="{{ path('app_contact') }}" class="btn btn-outline-primary btn-lg">Me contacter</a>
            </div>
        </div>
    </section>

    <!-- Skills Section -->
    <section class="skills-section py-5">
        <div class="container">
            <h2 class="section-title text-center">Compétences</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-code fa-3x mb-3 text-primary"></i>
                            <h3 class="card-title">Frontend</h3>
                            <p class="card-text">HTML5, CSS3, JavaScript, React, Vue.js</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-server fa-3x mb-3 text-primary"></i>
                            <h3 class="card-title">Backend</h3>
                            <p class="card-text">PHP, Symfony, Node.js, Python</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-database fa-3x mb-3 text-primary"></i>
                            <h3 class="card-title">Base de données</h3>
                            <p class="card-text">MySQL, PostgreSQL, MongoDB</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Latest Projects Section -->
    <section class="projects-section py-5 bg-light">
        <div class="container">
            <h2 class="section-title text-center">Derniers Projets</h2>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h3 class="card-title">Projet 1</h3>
                            <p class="card-text">Description du projet 1 avec les technologies utilisées et les fonctionnalités principales.</p>
                            <a href="#" class="btn btn-outline-primary">Voir le projet</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h3 class="card-title">Projet 2</h3>
                            <p class="card-text">Description du projet 2 avec les technologies utilisées et les fonctionnalités principales.</p>
                            <a href="#" class="btn btn-outline-primary">Voir le projet</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Latest Veille Section -->
    <section class="veille-section py-5">
        <div class="container">
            <h2 class="section-title text-center">Dernière Veille Technologique</h2>
            <div class="row">
                <div class="col-md-8 mx-auto">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">Titre de l'article</h3>
                            <p class="card-text">Résumé de l'article de veille technologique avec les points clés et les sources.</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Publié le 01/01/2024</small>
                                <a href="#" class="btn btn-outline-primary">Lire plus</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %} 