{% extends 'base.html.twig' %}

{% block title %}Portfolio - Adrien Pago{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <h1 class="main-title">Portfolio</h1>
            <div class="typing-container">
                <span id="typed-text"></span>
                <span class="cursor">|</span>
            </div>
            <a href="{{ asset('cv/CV_Adrien_Pago.pdf') }}" class="download-btn" download>
                <i class="fas fa-download"></i>
                Télécharger mon CV
            </a>
        </div>
        <div class="hero-background">
            <div class="shape shape1"></div>
            <div class="shape shape2"></div>
            <div class="shape shape3"></div>
        </div>
    </section>

    <!-- Latest Projects Section -->
    <section class="latest-projects">
        <div class="section-header">
            <h2>Derniers Projets</h2>
            <a href="{{ path('app_projects') }}" class="view-all">Voir tous les projets</a>
        </div>
        <div class="projects-grid">
            {% for project in latestProjects %}
                <div class="project-card" data-project-id="{{ project.id }}">
                    <div class="project-image">
                        <img src="{{ asset('uploads/projects/' ~ project.image) }}" alt="{{ project.title }}">
                    </div>
                    <div class="project-content">
                        <h3>{{ project.title }}</h3>
                        <p>{{ project.description|slice(0, 100) }}...</p>
                        <div class="project-tags">
                            {% for tag in project.tags %}
                                <span class="tag">{{ tag }}</span>
                            {% endfor %}
                        </div>
                        <a href="{{ path('app_project_show', {'id': project.id}) }}" class="project-link">
                            Voir le projet
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    <!-- Latest Veille Section -->
    <section class="latest-veille">
        <div class="section-header">
            <h2>Dernière Veille Technologique</h2>
            <a href="{{ path('app_veille') }}" class="view-all">Voir toute la veille</a>
        </div>
        {% if latestVeille %}
            <div class="veille-card">
                <div class="veille-content">
                    <h3>{{ latestVeille.title }}</h3>
                    <p>{{ latestVeille.description|slice(0, 200) }}...</p>
                    <div class="veille-meta">
                        <span class="date">
                            <i class="far fa-calendar"></i>
                            {{ latestVeille.date|date('d/m/Y') }}
                        </span>
                        <span class="category">
                            <i class="fas fa-tag"></i>
                            {{ latestVeille.category }}
                        </span>
                    </div>
                    <a href="{{ path('app_veille_show', {'id': latestVeille.id}) }}" class="veille-link">
                        Lire la suite
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        {% endif %}
    </section>
{% endblock %} 