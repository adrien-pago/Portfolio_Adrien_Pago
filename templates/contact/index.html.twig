{% extends 'base.html.twig' %}

{% block title %}Contact - Portfolio{% endblock %}

{% block body %}
    <div class="contact-header text-center">
        <h1 class="section-title">Contactez-moi</h1>
        <p class="lead mb-5">N'hésitez pas à me contacter pour discuter de vos projets ou pour toute question.</p>
    </div>

    <div class="contact-form-container">
        <div class="card">
            <div class="card-body">
                <div class="contact-info mb-4">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="info-item text-center">
                                <i class="fas fa-envelope mb-2"></i>
                                <h5>Email</h5>
                                <p>votre.email@example.com</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-item text-center">
                                <i class="fas fa-phone mb-2"></i>
                                <h5>Téléphone</h5>
                                <p>+33 6 XX XX XX XX</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="info-item text-center">
                                <i class="fas fa-map-marker-alt mb-2"></i>
                                <h5>Localisation</h5>
                                <p>Paris, France</p>
                            </div>
                        </div>
                    </div>
                </div>

                <form id="contactForm">
                    <div class="form-group">
                        <label for="name" class="form-label">Nom</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="subject" class="form-label">Sujet</label>
                        <input type="text" class="form-control" id="subject" name="subject" required>
                    </div>
                    <div class="form-group">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">ENVOYER</button>
                </form>
            </div>
        </div>

        <div class="social-links text-center mt-4">
            <a href="#" target="_blank" class="mx-2"><i class="fab fa-github"></i></a>
            <a href="#" target="_blank" class="mx-2"><i class="fab fa-linkedin"></i></a>
            <a href="#" target="_blank" class="mx-2"><i class="fab fa-twitter"></i></a>
        </div>
    </div>
{% endblock %} 