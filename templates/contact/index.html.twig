{% extends 'base.html.twig' %}

{% block title %}Contact - Portfolio{% endblock %}

{% block body %}
    <div class="contact-header text-center">
        <h1 class="section-title">Contactez-moi</h1>
        <p class="lead mb-5">N'hésitez pas à me contacter pour discuter de vos projets ou pour toute question.</p>
    </div>

    <div class="contact-form-container">
        <div class="card">
            <div class="card-body">
                <h2 class="contact-form-title">Formulaire de contact</h2>

                {# Affichage des messages de succès ou d'erreur #}
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} text-center">{{ message }}</div>
                    {% endfor %}
                {% endfor %}

                <form id="contactForm" method="post" action="{{ path('contact_send') }}">
                    <div class="form-group">
                        <label for="name" class="form-label">Nom</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="subject" class="form-label">Sujet</label>
                        <input type="text" class="form-control" id="subject" name="subject" required>
                    </div>
                    <div class="form-group">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">ENVOYER</button>
                </form>

                {# Logos sociaux centrés sous le formulaire #}
                <div class="text-center mt-4">
                    {% include '_partials/social_links.html.twig' with {
                        'show_text': false,
                        'class': 'contact-social-links',
                        'contact_email': 'adrien.pago@gmail.com'
                    } %}
                </div>
            </div>
        </div>
    </div>
{% endblock %} 