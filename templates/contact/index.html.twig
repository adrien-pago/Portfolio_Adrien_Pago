{% extends 'base.html.twig' %}

{% block title %}Contact - Portfolio{% endblock %}

{% block body %}
    <div class="contact-header">
        <h1 class="section-title">Contactez-moi</h1>
        <p class="lead">N'hésitez pas à me contacter pour discuter de vos projets ou pour toute question.</p>
    </div>

    <div class="contact-content">
        <div class="contact-info">
            <div class="card">
                <div class="card-body">
                    <div class="info-item">
                        <i class="fas fa-envelope"></i>
                        <div class="info-content">
                            <h5>Email</h5>
                            <p>votre.email@example.com</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-phone"></i>
                        <div class="info-content">
                            <h5>Téléphone</h5>
                            <p>+33 6 XX XX XX XX</p>
                        </div>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <div class="info-content">
                            <h5>Localisation</h5>
                            <p>Paris, France</p>
                        </div>
                    </div>
                    <div class="social-links">
                        <a href="#" target="_blank"><i class="fab fa-github"></i></a>
                        <a href="#" target="_blank"><i class="fab fa-linkedin"></i></a>
                        <a href="#" target="_blank"><i class="fab fa-twitter"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="contact-form">
            <div class="card">
                <div class="card-body">
                    <form id="contactForm">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nom</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="subject" class="form-label">Sujet</label>
                            <input type="text" class="form-control" id="subject" name="subject" required>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control" id="message" name="message" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-submit">Envoyer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="map-section">
        <div class="card">
            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.1420474756787!2d2.2951600761234567!3d48.85837007912345!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDjCsDUxJzMwLjEiTiAywrAxNyc0NS42IkU!5e0!3m2!1sfr!2sfr!4v1234567890!5m2!1sfr!2sfr" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
{% endblock %} 